<launch>
  <arg name="bag_path"/>
  <node pkg="mlcc" type="calib_camera" name="calib_camera"
    args="$(find mlcc)/config/camera_ar0231_002.yaml
          $(find mlcc)/config/config_outdoor_robosense-m1_ar0231_002_tf.yaml
          $(find mlcc)/result
          $(arg bag_path)"
    output="screen"/>

    <!-- distance threshold lower bound:
    if AVIA is set as the base LiDAR: 12 in scene-2, 8 in scene-1,
    if MID is set as the base LiDAR: 8 in scene-2, 0 in scene-1 -->
    <param name="dis_thr_low_bound" type="int" value="20"/>

    <!-- if using adaptive voxel -->
    <param name="use_ada_voxel" type="bool" value="true"/>
    <param name="use_schur_jacobi" type="bool" value="true"/>
    <param name="minimizer_progress_to_stdout" type="bool" value="true"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mlcc)/rviz_cfg/calib_camera.rviz"/>
</launch>
